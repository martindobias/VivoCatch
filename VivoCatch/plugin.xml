<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="cz.martindobias.vivocatch.applications"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="cz.martindobias.vivocatch.Application">
         </run>
      </application>
   </extension>
   <extension
         id="cz.martindobias.vivocatch.perspectives"
         point="org.eclipse.ui.perspectives">
      <perspective
            class="cz.martindobias.vivocatch.perspectives.MainPerspectiveFactory"
            id="cz.martindobias.vivocatch.perspectives.main"
            name="VivoCatch">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="cz.martindobias.vivocatch.applications"
            name="VivoCatch">
         <property
               name="appName"
               value="VivoCatch">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
      </perspectiveExtension>
   </extension>
   <extension
         id="cz.martindobias.vivocatch.views"
         point="org.eclipse.ui.views">
   </extension>

</plugin>
